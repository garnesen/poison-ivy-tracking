<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="3">
    <!--Ivy itself-->
    <android.support.v7.widget.CardView
        android:id="@+id/cvIvy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ivy_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">
                <TextView
                    android:id="@+id/ivy_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="Identify Poison Ivy" />

                <ImageView
                    android:id="@+id/ivy_title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ivy_title_text"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>

            <LinearLayout
                android:id="@+id/ivy_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingBottom="10dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/ivy_description_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/identify_poison_ivy"
                    />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <!--Creeping Ivy-->
    <android.support.v7.widget.CardView
        android:id="@+id/cvcreeping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/creeping_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">

                <TextView
                    android:id="@+id/creeping_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="Identify Creeping Ivy" />

                <ImageView
                    android:id="@+id/creeping_title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/creeping_title_text"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/creeping_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/creeping_description_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/identify_poison_ivy"
                    android:paddingBottom="5dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <!--Climbing Ivy-->
    <android.support.v7.widget.CardView
        android:id="@+id/cvclimbing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/climbing_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">

                <TextView
                    android:id="@+id/climbing_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="Identify Climbing Ivy" />

                <ImageView
                    android:id="@+id/climbing_title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/climbing_title_text"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/climbing_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/climbing_description_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/climbing_ivy"
                    />

                <TextView
                    android:id="@+id/climbingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp" />
                    <!--android:text="@string/climbingDescription" />-->

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <!--Shrub Ivy-->
    <android.support.v7.widget.CardView
        android:id="@+id/cvshrub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/shrub_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">

                <TextView
                    android:id="@+id/shrub_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="Identify Shrub Ivy" />

                <ImageView
                    android:id="@+id/shrub_title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/shrub_title_text"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shrub_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/shrub_description_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_weight="0.1"
                    android:background="@drawable/identify_ivy_shrub"
                    />

                <TextView
                    android:id="@+id/shrubText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>

</ScrollView>
